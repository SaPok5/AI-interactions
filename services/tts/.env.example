# TTS Service Configuration - Free and Open Source Only

# Server Settings
PORT=8006
DEBUG=false

# Redis Configuration
REDIS_URL=redis://redis:6379

# TTS Engine Configuration - All Free and Open Source
DEFAULT_ENGINE=piper
FALLBACK_ENGINE=coqui

# Enable/Disable TTS Engines
ENABLE_PIPER_TTS=true
ENABLE_COQUI_TTS=true
ENABLE_ESPEAK_NG=true
ENABLE_PYTTSX3=true

# Disabled proprietary/online engines
ENABLE_OPENAI_TTS=false
ENABLE_GEMINI_TTS=false
ENABLE_EDGE_TTS=false
ENABLE_GTTS=false
ENABLE_VOICE_CLONING=false

# Audio Settings
SAMPLE_RATE=44100
AUDIO_FORMAT=wav
AUDIO_QUALITY=high
BIT_DEPTH=16

# Voice Settings
DEFAULT_VOICE=default
DEFAULT_LANGUAGE=en
DEFAULT_SPEED=1.0
DEFAULT_PITCH=1.0
ENABLE_PYTTSX3_VOICES=true

# Storage Configuration
AUDIO_STORAGE_PATH=/app/data/audio
MODEL_STORAGE_PATH=/app/data/models
PIPER_MODELS_PATH=/app/data/models/piper
COQUI_MODELS_PATH=/app/data/models/coqui
MAX_AUDIO_FILE_SIZE_MB=50
AUDIO_CACHE_TTL_HOURS=24

# Model Download Settings
AUTO_DOWNLOAD_MODELS=true
DEFAULT_PIPER_MODEL=en_US-lessac-medium
DEFAULT_COQUI_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# Performance Settings
MAX_TEXT_LENGTH=5000
MAX_CONCURRENT_SYNTHESES=10
SYNTHESIS_TIMEOUT_SECONDS=60
PIPER_SYNTHESIS_TIMEOUT=30
COQUI_SYNTHESIS_TIMEOUT=90

# Streaming Settings
CHUNK_SIZE=1024
STREAMING_BUFFER_SIZE=8192
